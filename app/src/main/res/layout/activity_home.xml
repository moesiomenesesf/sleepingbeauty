<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41134F"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="333dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="307dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:text="BPM"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="232dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="150"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="100sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="232dp" />

        </FrameLayout>

        <Button
            android:id="@+id/lampada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lampada" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_below="@+id/starScanButton"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="starScan"
            android:id="@+id/starScanButton"
            android:layout_marginTop="43dp"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stopScan"
            android:id="@+id/stopScanButton"
            android:layout_above="@+id/listView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="52dp" />

        <Button
            android:id="@+id/signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>